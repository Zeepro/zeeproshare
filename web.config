<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="www.home -> home" stopProcessing="true">
                    <match url="^(.+)" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="^www\.home\.zeepro\.com$" negate="true" />
                        <add input="{HTTP_HOST}" pattern="^localhost" negate="true" />
                        <add input="{HTTP_HOST}" pattern="^zhomedev\.azurewebsites\.net$" negate="true" />
                    </conditions>
                    <action type="Redirect" url="http://home.zeepro.com{REQUEST_URI}" redirectType="Permanent" appendQueryString="true" />
                </rule>
                <rule name="Redirect to https" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" ignoreCase="true" />
                        <add input="{HTTP_HOST}" pattern="^localhost" negate="true" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" appendQueryString="false" />
                </rule>
                <rule name="CodeIgniter" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                        <add input="{URL}" pattern="^/favicon.ico$" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php/{R:1}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>